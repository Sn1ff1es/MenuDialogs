<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base style for every rounded dialog -->
    <style name="Base.AppTheme.Dialog.Rounded" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
    </style>

    <!-- Simple Dialog -->
    <style name="AppTheme.Dialog.Simple" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="dialogCompoundIconColor">@android:color/black</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
    </style>

    <!-- Rounded Dialog Style -->
    <style name="AppTheme.Dialog.Rounded" parent="@style/Base.AppTheme.Dialog.Rounded">
        <item name="dialogCompoundIconColor">@android:color/black</item>
        <item name="dialogBackgroundColor">@android:color/white</item>
        <item name="dialogBorderColor">@android:color/white</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
    </style>

    <!-- Rounded Colored Dialog Style -->
    <style name="AppTheme.Dialog.Rounded.Colored" parent="@style/Base.AppTheme.Dialog.Rounded">
        <item name="dialogCompoundIconColor">@color/colorAccent</item>
        <item name="dialogBackgroundColor">@android:color/white</item>
        <item name="dialogBorderColor">@color/colorAccent</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
    </style>

    <!-- Rounded Black Colored Dialog Style -->
    <style name="AppTheme.Dialog.Rounded.Colored.Dark" parent="@style/Base.AppTheme.Dialog.Rounded">
        <item name="dialogCompoundIconColor">@color/colorAccent</item>
        <item name="dialogBackgroundColor">@android:color/black</item>
        <item name="dialogBorderColor">@color/colorAccent</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
    </style>

</resources>
