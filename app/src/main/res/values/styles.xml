<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Rounded Dialog Style -->
    <style name="RoundedDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
    </style>

    <!-- Rounded Colored Dialog Style -->
    <style name="RoundedColoredDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">#000</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/rounded_colored_dialog</item>
    </style>

    <!-- Rounded Black Colored Dialog Style -->
    <style name="RoundedBlackColoredDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">#000</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/rounded_colored_dialog</item>
    </style>

</resources>
